pipeline{
    agent any
    stages{
        stage('checkout the code from github'){
            steps{
                 git url: 'https://github.com/akshu20791/DevOpsClassCodes/'
                 echo 'github url checkout'
            }
        }
        stage('code compile'){
            steps{
                echo 'starting compiling'
                sh 'mvn compile'
            }
        }
        stage('code testing'){
            steps{
                sh 'mvn test'
            }
        }
        stage('code qa'){
            steps{
                sh 'mvn checkstyle:checkstyle'
            }
        }
        stage('code package'){
            steps{
                sh 'mvn package'
            }
        }
         stage ('code deploy'){
            steps{
               sh 'cp /var/lib/jenkins/webapps/addressbook.war /opt/tomcat/webapps'
    }
}
